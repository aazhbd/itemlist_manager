{% extends path_sys_template %}
{% block title %}
    {{ page_title|default('Home') }}
{% endblock %}
{% block contentheader %}
    <div id="banner">
        <a href="{{ path_url_postfix }}/">
            <img src="{{ path_static }}images/logo.gif" alt="www.articulatelogic.com" id="logo"/>
        </a>
        <div id="navigatemenu">
            <div class="pure-menu pure-menu-horizontal">
                <ul class="pure-menu-list">
                    <li class="pure-menu-item">
                        <a href="{{ path_url_postfix }}/home" class="pure-menu-link">Home</a>
                    </li>
                    {% if session.get('user_info').utype == 1 %}
                    <li class="pure-menu-item">
                        <a href="{{ path_url_postfix }}/itemlist" class="pure-menu-link">Manage Items</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
        <div id="topright">
            {% if session.get('is_authenticated') %}
                <a class="pure-button pure-button-primary" href="{{ path_url_postfix }}/home">
                    {% if session.get('user_info').firstname %}
                        {{ session.get('user_info').firstname }}'s
                    {% else %}
                        User
                    {% endif %}
                        Home
                </a>
                <a href="{{ path_url_postfix }}/logout">Logout</a>
            {% else %}
                <a class="pure-button pure-button-primary" href="{{ path_url_postfix }}/login">Login</a>
                <a class="pure-button pure-button-primary" href="{{ path_url_postfix }}/signup">Signup</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block contentbody %}
    {% if content_message %}
        <div id="reports">{{ content_message }}</div>
    {% endif %}
    {{ parent() }}
    {{ body_content }}
{% endblock %}
{% block footers %}
    <p>
        &copy; 2009 - 2016 <a href="mailto:aazhbd@yahoo.com">AAZ H</a> | <a href="http://www.articulatelogic.com/">ArticulateLogic.com</a>
        | <a href="{{ path_url_postfix }}/home">Home</a>
    </p>
{% endblock %}
